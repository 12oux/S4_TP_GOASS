@model IEnumerable<GOASS.Models.Eval>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Vos Évaluations</h1>

<p>
    <a class="myButtonCenter" asp-action="Create">Évaluez-nous!</a>
</p>
<table class="table col-md-10 col-sm-12">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomClient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrenomClient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomClient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrenomClient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EvalID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EvalID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EvalID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
