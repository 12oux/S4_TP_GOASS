@model GOASS.Models.Produit

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Produit</h4>
    <hr />
    <dl class="row" style="background-color:white;">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomProduit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomProduit)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Marque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Marque)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Taille)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Taille)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantité)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantité)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sport)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sport)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prix)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prix)
        </dd>
        @if (Model.ImageID != null)
        {
            <dt class="col-sm-2">
                Photo de l'item'
            </dt>
            <dd class="col-sm-10">
                <img src="@string.Format("data:{0};base64,{1}", Model.Image.ContentType, Convert.ToBase64String(Model.Image.ImageData))" width="250" height="250" />
            </dd>
        }
        <dd>
            <a class="myButtonSuccess" asp-action="Edit" asp-route-id="@Model.ProduitID">Modifier</a>
            <a class="myButtonCenter" asp-action="Index">Retour aux produits</a>
        </dd>
    </dl>
</div>

